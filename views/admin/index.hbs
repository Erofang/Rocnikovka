<h1>ADMIN</h1>

<!--tabulka pro upravu jidla-->
   <div class="container">
  <div class="row">
    <div class="col-12">
      <table class="table table-striped table-dark">
        <thead>
            
          <tr>
            <th scope="col">Id</th>
            <th scope="col">Název</th>
            <th scope="col">Cena</th>
            <th scope="col">Popis</th>
            <th scope="col">Akce</th>
          </tr>
          
        </thead>
        <tbody>
            {{#each Food}}
          <tr>
            <td>{{this.id_vyr}}</td>
            <td>{{this.nazev}}</td>
