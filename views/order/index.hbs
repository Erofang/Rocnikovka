{{#if login}}
<nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="/">U Pepegy</a>
      </div>
      <ul class="nav navbar-nav navbar-right">
        <li><form action="/logout?_method=DELETE" method="POST"><button type="submit" class="btn btn-danger">Odhlásit</button></form></li>
      </ul>
    </div>
  </nav>
  {{#each Food}}
  <div class="column">
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <img src="https://assets.tmecosys.com/image/upload/t_web600x528/img/recipe/ras/Assets/5802fab5-fdce-468a-a830-43e8001f5a72/Derivates/c00dc34a-e73d-42f0-a86e-e2fd967d33fe.jpg" alt="...">
        <div class="caption">
          <h3>{{this.nazev}}</h3>
          <p>{{this.popis}}</p>
          <div class="clearfix">
            <div class="price">{{this.cena}}0Kč</div>
            <a href="#" class="btn btn-default pull-right" role="button">+</a>
            </div>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
  <!--tabulka pro kontakní udaje-->           
  <footer class="footer_section">
    <div class="container">
      <div class="row">
        <div class="col-md-4 footer-col">
          <div class="footer_contact">
            <h4>
              Kontakty
            </h4>
            <div class="contact_link_box">
              <a href="https://www.google.com/maps/place/Jahodov%C3%A1,+415+01+Teplice/@50.6513917,13.8272338,17z/data=!3m1!4b1!4m5!3m4!1s0x47098e6183f9a765:0x220f2b10d1456df6!8m2!3d50.6513883!4d13.8294225" target="_blank">
                <i class="fa fa-map-marker" aria-hidden="true"></i>
                <span>
                  Jahodvá 123, Teplice
                </span>
              </a>
              <a href="">
                <i class="fa fa-phone" aria-hidden="true"></i>
                <span>
                  +420 775 715 735
                </span>
              </a>
              <a href="mailto:Upepegy@gmail.com">
                <i class="fa fa-envelope" aria-hidden="true"></i>
                <span>
                  Upepgy@gmail.com
                </span>
              </a>
            </div>
          </div>
        </div>
        <div class="col-md-4 footer-col">
          <div class="footer_detail">
            <a href="" class="footer-logo">
              U Pepegy
            </a>
            <p>
              Vaše oblíbená pizzeria se super cenami a nejrychlejším dovozem v okolí :)
            </p>
            <div class="footer_social">
              <a href="https://www.facebook.com/" target="_blank">
                <i class="fa fa-facebook" aria-hidden="true"></i>
              </a>
              <a href="https://twitter.com/home?lang=cs" target="_blank">
                <i class="fa fa-twitter" aria-hidden="true"></i>
              </a>
              <a href="https://www.instagram.com/" target="_blank">
                <i class="fa fa-instagram" aria-hidden="true"></i>
              </a>
            </div>
          </div>
        </div>
        <div class="col-md-4 footer-col">
          <h4>
            Otevírací doba
          </h4>
          <p>
            Každý den
          </p>
          <p>
            10.00 - 23.00 
          </p>
        </div>
      </div>
    </div>
  </footer>
{{/if}}

