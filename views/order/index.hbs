         Products: 
        <button onclick="showProducts()">Show all</button> 
        <button onclick="showFoods()">Show foods</button> 
        <button onclick="showDrinks()">Show drinks</button>

        <div id="products"></div>

        <script>
           const foods = ["Svíčková", "Řízek", "Krtkův dort"];
            const drinks = ["Cola", "Kofola", "Voda"];

            const products = foods.concat(drinks); 

            function showProducts(){
                const prodDiv = document.getElementById("products");
                prodDiv.innerHTML = "";

                products.forEach(product => {
                    prodDiv.innerHTML += product + "<button>+</button><br>";
                });
            }

            function showFoods(){
                const prodDiv = document.getElementById("products");
                prodDiv.innerHTML = "";

                foods.forEach(food => {
                    prodDiv.innerHTML += food + "<br>";
                });
            }

            function showDrinks(){
                const prodDiv = document.getElementById("products");
                prodDiv.innerHTML = "";

                drinks.forEach(drink => {
                    prodDiv.innerHTML += drink + "<br>";
                });
            }



        </script>
        </script>
